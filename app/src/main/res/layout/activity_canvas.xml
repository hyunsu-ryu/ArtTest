<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e3e7">

    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="165dp"
        android:layout_height="101dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#51c4d3"
        android:text="다시그리기"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_gobefore"
        app:layout_constraintEnd_toStartOf="@+id/btn_savepicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentView" />

    <Button
        android:id="@+id/btn_savepicture"
        android:layout_width="173dp"
        android:layout_height="106dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:drawableRight="@android:drawable/ic_menu_save"
        android:text="저장하기"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_gobefore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/parentView" />

    <Button
        android:id="@+id/btn_gobefore"
        android:layout_width="147dp"
        android:layout_height="101dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/abc_vector_test"
        android:text="이전메뉴"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_savepicture" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="27dp"
        android:text="나무그림을 그려주세요"
        android:textColor="#132c33"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/parentView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>