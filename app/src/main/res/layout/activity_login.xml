<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e3e7">

    <EditText
        android:id="@+id/id_login"
        android:layout_width="177dp"
        android:layout_height="65dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="102dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="로그인"
        android:textColor="#132c33"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pwd_login"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_login" />

    <Button
        android:id="@+id/btn_pictureactivity"
        android:layout_width="185dp"
        android:layout_height="218dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#d8e3e7"
        android:drawableBottom="@drawable/arttest_start_test"
        android:text="검사시작"
        android:textColor="#132c33"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_newmake"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="185dp"
        android:layout_height="200dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#d8e3e7"
        android:drawableBottom="@drawable/arttest_login_btn"
        android:textColor="#132c33"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_newmake"
        android:layout_width="187dp"
        android:layout_height="217dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#d8e3e7"
        android:drawableBottom="@drawable/arttest_newmake_icon"
        android:text="회원가입"
        android:textColor="#132c33"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_pictureactivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="91dp"
        android:text="아이디저장"
        app:layout_constraintEnd_toStartOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd_login" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="116dp"
        android:layout_height="35dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="128dp"
        android:text="비밀번호저장"
        app:layout_constraintBottom_toTopOf="@+id/btn_newmake"
        app:layout_constraintEnd_toStartOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

</androidx.constraintlayout.widget.ConstraintLayout>